{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "ES5",
    "lib": [
      "es2015",
      "dom"
    ],
	"paths": {
		"react": ["./node_modules/@types/react"]
	},
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
	"baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
